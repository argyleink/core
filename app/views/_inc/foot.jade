//- Allows you to pass an array of page specific scripts to load
if locals.js
  each script in js
    script(src='#{site.public.js}#{script}')

if ( locals.site.environment === 'development' )
  //Livereload script rendered
  script(src='http://localhost:35729/livereload.js')

if ( locals.site.config.polyfills === true )	
  // Load polyfill script
  script(src='/polyfill.js')
      
if ( locals.site.config.socket.use === true )	
  script(src='http://localhost:#{site.config.socket.port}/socket.io/socket.io.js')
  script.
    var socket = io.connect('http://localhost:#{site.config.socket.port}');
